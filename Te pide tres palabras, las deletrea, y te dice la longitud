#include <iostream>
#include <string>
using namespace std;

int main() {
    string word1, word2, word3;
    cout<<"Ingresa tres palabras --> ";
	cin >> word1 >> word2 >> word3;
    cout << "Tome usted :" << endl;
    
	cout << word1 << "--> ";
    for (int i = 0; i < word1.length(); i++) {
        cout << word1[i] << " ";
    }
    cout<<"    Tiene "<<word1.length()<<" letras"<<endl;
    
	
	cout << word2 << "--> ";
    for (int i = 0; i < word2.length(); i++) {
        cout << word2[i] << " ";
    }
    cout<<"    Tiene "<<word2.length()<<" letras"<<endl;


    cout << word3 << "--> ";
    for (int i = 0; i < word3.length(); i++) {
        cout << word3[i] << " ";
    }
    cout<<"    Tiene "<<word3.length()<<" letras"<<
	 endl;
    
    return 0;
}
